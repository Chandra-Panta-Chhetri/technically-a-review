<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Edit Campground</h1>
	<div class="my-4">
		<form action="/campgrounds/<%= camp._id %>/?_method=PUT" method="POST" enctype="multipart/form-data"
			autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="name">Camp Name</label>
					<input type="text" id="name" class="form-control mb-2" name="camp[name]" value="<%= camp.name %>"
						required>
					<label for="description">Camp Description</label>
					<input type="text" id="description" class="form-control mb-2" name="camp[description]"
						value="<%= camp.description %>" required>
					<label for="price">Camp Price</label>
					<input type="number" id="price" class="form-control mb-4" name="camp[price]"
						value="<%= camp.price %>" required min="0.01" step="0.01">
					<div class="custom-file mb-3">
						<input type="file" id="image" class="custom-file-input" name="image" accept="image/*">
						<label class="custom-file-label" for="image">Upload New Camp Picture</label>
					</div>
					<button class="btn btn-primary btn-block mb-2">Submit Changes</button>
					<a href="/campgrounds/<%= camp._id %>">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<script src="/js/agency.js"></script>
<%- include("../partials/footer") %>