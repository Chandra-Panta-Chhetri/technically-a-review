<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Edit Campground</h1>
	<div class="my-4">
			<form action="/campgrounds/<%= camp._id %>/?_method=PUT" method="POST" enctype="multipart/form-data" autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="name">Camp Name</label>
					<input type="text" id="name" class="form-control mb-2" name="camp[name]" value="<%= camp.name %>">
					<label for="description">Camp Description</label>
					<input type="text" name="camp[description]" id="description" class="form-control mb-2" value="<%= camp.description %>">
					<label for="price">Camp Price</label>
					<input type="number" name="camp[price]" id="price" class="form-control mb-2" value="<%= camp.price %>" min="0.01" step="0.01">
					<div class="custom-file mb-2">
						<input type="file" name="image" class="custom-file-input" id="image" accept="image/*">
						<label class="custom-file-label" for="image">Choose New Camp Picture</label>
					</div>
					<button type="submit" class="btn btn-primary btn-block mb-2">Submit Changes</button>
					<a href="/campgrounds/<%= camp._id %>">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<script src="/js/agency.js"></script>
<%- include("../partials/footer") %>