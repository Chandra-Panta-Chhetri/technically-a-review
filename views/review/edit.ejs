<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Edit Review</h1>
	<div class="my-4">
		<form action="/techProducts/<%= techProductId %>/reviews/<%= review._id %>/?_method=PUT" method="POST"
			autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="rating">Rating*</label>
					<div>
						<% for(var i = 0; i <= 5; i++){ %>
						<label class="radio-inline mr-1"><input type="radio" name="review[rating]" value="<%= i %>"
								<%= review.rating === i ? 'checked': '' %>> <%= i %></label>
						<% } %>
					</div>
					<label for="comment">Comment*</label>
					<textarea id="comment" class="form-control mb-3" name="review[comment]"
						required><%= review.comment %></textarea>
					<button class="btn btn-primary btn-block mb-2">Submit Changes</button>
					<a href="/techProducts/<%= techProductId %>/reviews">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>