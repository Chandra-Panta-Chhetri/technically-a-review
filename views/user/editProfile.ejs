<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Edit Profile</h1>
	<div class="my-4">
			<form action="/users/<%= user._id %>?_method=PUT" method="POST">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<input type="text" name="name" class="form-control mb-2" value="<%= user.fullName %>">
					<input type="email" name="email" class="form-control mb-2" value="<%= user.email %>">
					<input type="text" name="avatar" class="form-control mb-2" value="<%= user.avatar %>">
					<button class="btn btn-primary btn-block mb-2">Confirm Changes</button>
					<a href="/campgrounds">Go Back to Campgrounds</a>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>