<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Sign Up</h1>
	<div class="text-center mt-3">
		<h6>Sign up with</h6>
		<a href="/auth/google" class="btn btn-danger mb-2"><i class="fab fa-google"></i></a>
		<p><strong>Or</strong></p>
	</div>
	<div class="my-2">
		<hr>
		<form action="/users" method="POST" enctype="multipart/form-data" autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="email">Email</label>
					<input type="email" id="email" class="form-control mb-2" name="newUser[email]" placeholder="email"
						required pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,3})$">
					<label for="password">Password</label>
					<div class="input-group mb-2">
						<input type="password" id="password" class="form-control" name="newUser[password]"
							placeholder="password" required pattern=".{8,}" title="8 characters minimum.">
						<div class="input-group-append">
							<a class="btn btn-secondary"><i class="fas fa-eye-slash"></i></a>
						</div>
					</div>
					<label for="fullName">Full Name</label>
					<input type="text" id="fullName" class="form-control mb-4" name="newUser[name]"
						placeholder="full name" required>
					<div class="custom-file mb-2">
						<input type="file" id="avatar" class="custom-file-input" name="avatar" required
							accept="image/*">
						<label class="custom-file-label" for="avatar">Upload Profile Picture</label>
					</div>
					<label for="code">Admin Code</label>
					<input type="password" id="code" class="form-control mb-3" name="newUser[code]"
						placeholder="Admin Code">
					<button class="btn btn-primary btn-block mb-2">Sign Up!</button>
					<span>Already have an account? <a href="/login">Login</a></span>
				</div>
			</div>
		</form>
	</div>
</div>
<script src="/js/agency.js"></script>
<script src="/js/revealPassword.js"></script>
<%- include("../partials/footer") %>