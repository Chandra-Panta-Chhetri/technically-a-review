<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Reset Password</h1>
	<div class="my-4">
		<form action="/reset/<%= token %>" method="POST" autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="newPass">New Password*</label>
					<div class="input-group mb-2">
						<input type="password" id="newPass" class="form-control" name="password"
							placeholder="new password" required pattern=".{8,}" title="8 characters minimum.">
						<div class="input-group-append">
							<a class="btn btn-secondary"><i class="fas fa-eye-slash"></i></a>
						</div>
					</div>
					<label for="confirmPass">Confirm New Password*</label>
					<div class="input-group mb-3">
						<input type="password" id="confirmPass" class="form-control" name="confirm"
							placeholder="confirm password" required pattern=".{8,}" title="8 characters minimum.">
						<div class="input-group-append">
							<a class="btn btn-secondary"><i class="fas fa-eye-slash"></i></a>
						</div>
					</div>
					<button class="btn btn-primary btn-block mb-2">Change Password</button>
				</div>
			</div>
		</form>
	</div>
</div>
<script src="/js/revealPassword.js"></script>
<%- include("../partials/footer") %>