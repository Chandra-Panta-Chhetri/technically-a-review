<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Login</h1>
	<div class="text-center mt-3">
		<a href="/auth/google" class="btn btn-danger mb-2"><i class="fab fa-google mr-2"></i>Log in with Google</a>
		<p><strong>Or</strong></p>
	</div>
	<div class="my-2">
		<hr>
		<form action="/login" method="POST" autocomplete="on">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="email">Email</label>
					<input type="text" id="email" name="email" class="form-control mb-2" placeholder="email" required>
					<label for="password">Password</label>
					<div class="input-group mb-3">
						<input type="password" id="password" class="form-control" name="password" placeholder="password"
							required>
						<div class="input-group-append">
							<a class="btn btn-secondary"><i class="fas fa-eye-slash"></i></a>
						</div>
					</div>
					<button class="btn btn-primary btn-block mb-2">Login</button>
					<span>New to TECHnically A Review? <a href="/signup">Signup</a></span>
					<a href="/forgot" class="float-right">Forgot Password?</a>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>