<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Edit Tech Product</h1>
	<div class="my-4">
		<form action="/techProducts/<%= techProduct._id %>/?_method=PUT" method="POST" enctype="multipart/form-data"
			autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="name">Name</label>
					<input type="text" id="name" class="form-control mb-2" name="techProduct[name]"
						value="<%= techProduct.name %>" required>
					<label for="description">Description</label>
					<textarea id="description" class="form-control mb-2" name="techProduct[description]"
						required><%= techProduct.description %></textarea>
					<label for="category">Category</label>
					<select id="category" class="form-control mb-2" name="techProduct[category]">
						<option value="laptops" <%= techProduct.category === 'laptops' ? 'selected':'' %>>Laptops
						</option>
						<option value="phones" <%= techProduct.category === 'phones' ? 'selected':'' %>>Phones</option>
						<option value="gaming" <%= techProduct.category === 'gaming' ? 'selected':'' %>>Gaming</option>
						<option value="tvs" <%= techProduct.category === 'tvs' ? 'selected':'' %>>TVs</option>
						<option value="tablets" <%= techProduct.category === 'tablets' ? 'selected':'' %>>Tablets
						</option>
						<option value="wearables" <%= techProduct.category === 'wearables' ? 'selected':'' %>>Wearables
						</option>
						<option value="audio" <%= techProduct.category === 'audio' ? 'selected':'' %>>Audio</option>
					</select>
					<label for="price">Price</label>
					<input type="number" id="price" class="form-control mb-4" name="techProduct[price]"
						value="<%= techProduct.price %>" required min="0.01" step="0.01">
					<div class="custom-file mb-3">
						<input type="file" id="image" class="custom-file-input" name="image" accept="image/*">
						<label class="custom-file-label" for="image">Upload New Picture of Tech Product</label>
					</div>
					<button class="btn btn-primary btn-block mb-2">Submit Changes</button>
					<a href="/techProducts/<%= techProduct._id %>/reviews">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>