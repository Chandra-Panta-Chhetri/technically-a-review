<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Edit Comment</h1>
	<div class="my-4">
			<form action="/campgrounds/<%= campId %>/comments/<%= comment._id %>/?_method=PUT" method="POST">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<input type="number" name="comment[rating]" class="form-control mb-2" value="<%= comment.rating %>" min="1" max="5" step="1">
					<input type="text" name="comment[content]" class="form-control mb-2" value="<%= comment.content %>">
					<button type="submit" class="btn btn-primary btn-block mb-2">Submit Changes</button>
					<a href="/campgrounds/<%= campId %>">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>