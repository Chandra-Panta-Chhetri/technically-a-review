<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Edit Comment</h1>
	<div class="my-4">
			<form action="/campgrounds/<%= campId %>/comments/<%= comment._id %>/?_method=PUT" method="POST" autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="rating">Rating</label>
					<input type="number" id="rating" class="form-control mb-2" name="comment[rating]" value="<%= comment.rating %>" required min="0" max="5" step="1">
					<label for="comment">Comment</label>
					<input type="text" id="comment" class="form-control mb-2" name="comment[content]" value="<%= comment.content %>" required>
					<button class="btn btn-primary btn-block mb-2">Submit Changes</button>
					<a href="/campgrounds/<%= campId %>">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>