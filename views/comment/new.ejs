<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Add a New Comment</h1>
	<div class="my-4">
			<form action="/campgrounds/<%= camp._id %>/comments" method="POST" autocomplete="off">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<label for="rating">Rating</label>
					<input type="number" id="rating" class="form-control mb-2" name="comment[rating]" placeholder="rating (out of 5)" required min="0" max="5" step="1">
					<label for="comment">Comment</label>
					<input type="text" id="comment" class="form-control mb-3" name="comment[content]" placeholder="comment" required>
					<button class="btn btn-primary btn-block mb-2">Post Comment</button>
					<a href="/campgrounds/<%= camp._id %>">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
<%- include("../partials/footer") %>