<%- include("../partials/header") %>
<div class="my-3">
	<h1 class="text-center">Add a New Comment</h1>
	<div class="my-4">
			<form action="/campgrounds/<%= camp._id %>/comments" method="POST">
			<div class="form-group row justify-content-center">
				<div class="col-12 col-md-6 col-lg-5">
					<input type="text" name="comment[content]" class="form-control mb-2" placeholder="comment">
					<button class="btn btn-primary btn-block mb-2">Add</button>
					<a href="/campgrounds/<%= camp._id %>">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
